{
  "name": "concom",
  "version": "1.0.0",
  "description": "A console-based helper app with a todo list with more features planned",
  "private": false,
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\"",
    "build": "tsc",
    "format": "prettier --write 'src/'",
    "lint": "eslint 'src/'",
    "lint:fix": "eslint 'src/' --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm i && npm run build && npm run format && git add .",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agrmohit/console-companion.git"
  },
  "keywords": [
    "typescript",
    "levelup",
    "todoapp",
    "chalk",
    "inquirerjs",
    "commanderjs"
  ],
  "author": "Mohit Raj",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agrmohit/console-companion/issues"
  },
  "homepage": "https://github.com/agrmohit/console-companion#readme",
  "devDependencies": {
    "@types/inquirer": "^7.3.1",
    "@types/leveldown": "^4.0.2",
    "@types/levelup": "^4.3.0",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.0.0",
    "inquirer": "^7.3.3",
    "leveldown": "^5.6.0",
    "levelup": "^4.4.0"
  },
  "files": [
    "dist/**/*"
  ]
}
